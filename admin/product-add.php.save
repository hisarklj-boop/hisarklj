<?php
require_once '../config/database.php';

if(!isset($_SESSION['user_id']) || $_SESSION['role'] != 'admin') {
    header('Location: /admin/login.php');
    exit;
}

$message = '';
$error = '';

if($_SERVER['REQUEST_METHOD'] == 'POST') {
    $title = trim($_POST['title'] ?? '');
    $code = trim($_POST['code'] ?? '');
    $description = trim($_POST['description'] ?? '');
    $price = floatval($_POST['price'] ?? 0);
    $stock = intval($_POST['stock'] ?? 0);
    
    if($title && $code && $price > 0) {
        try {
            $stmt = $db->prepare("INSERT INTO products (title, code, description, price, stock, is_active, created_at) VALUES (?, ?, ?, ?, ?, 1, NOW())");
            $stmt->execute([$title, $code, $description, $price, $stock]);
            $product_id = $db->lastInsertId();
            
            if(isset($_FILES['images']) && is_array($_FILES['images']['name'])) {
                for($i = 0; $i < count($_FILES['images']['name']) && $i < 20; $i++) {
                    if($_FILES['images']['error'][$i] == 0) {
                        $ext = strtolower(pathinfo($_FILES['images']['name'][$i], PATHINFO_EXTENSION));
                        if(in_array($ext, ['jpg','jpeg','png','gif'])) {
                            $filename = 'product_'.$product_id.'_'.($i+1).'_'.time().'.'.$ext;
                            
                            if(move_uploaded_file($_FILES['images']['tmp_name'][$i], '../uploads/products/'.$filename)) {
                                $stmt = $db->prepare("INSERT INTO product_images (product_id, image_path, is_primary, sort_order, created_at) VALUES (?, ?, ?, ?, NOW())");
                                $stmt->execute([$product_id, $filename, ($i == 0 ? 1 : 0), $i]);
                            }
                        }
                    }
                }
            }
            
            header('Location: /admin/products.php?success=1');
            exit;
            


    } else {
        $error = 'Lütfen tüm alanları doldurun!';
    }
}
